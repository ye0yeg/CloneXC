<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/rl_nav_user_Info"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/user_home_bg" />

            <View
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14.5dp"
                android:background="@drawable/navigation_user_sharow" />

            <RelativeLayout
                android:id="@+id/circleLayout"
                android:layout_width="53dp"
                android:layout_height="53dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/navigation_user_sharow">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_info_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_name_info" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/circleLayout"
                android:text="text"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_user_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_user_name"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/circleLayout"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="-UNDER THE LINE LINE THE UNDER-"
                android:textAppearance="?android:attr/textAppearance"
                android:textColor="#6d7e96"
                android:textSize="15sp"
                android:visibility="gone"
                />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>